{
     "manifest_version": 3,
     "name": "Internet Speed Checker",
     "version": "1.0",
     "description": "Check internet speed and connectivity directly from your browser.",
     "permissions": ["background", "storage"],
     "host_permissions": ["*://*/*"],
     "background": {
       "service_worker": "background.js"
     },
     "action": {
       "default_popup": "popup.html",
       "default_icon": {
         "16": "icons/icon16.png",
         "48": "icons/icon48.png",
         "128": "icons/icon128.png"
       }
     },
     "icons": {
       "16": "icons/icon16.png",
       "48": "icons/icon48.png",
       "128": "icons/icon128.png"
     }
   }   